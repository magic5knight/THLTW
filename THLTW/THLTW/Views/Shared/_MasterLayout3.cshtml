<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/mystyle.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div id="div-top">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="~/Categories">PRODUCT STORE</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Products">ADMIN PRODUCT</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/CustomerProducts">
                        CUSTOMER
                        PRODUCT
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">CONTACT</a>
                </li>
            </ul>
            <div class="ms-auto">
                @Html.Action("CartPartial", "Cart")
                @Html.Partial("_PartialLogin")
            </div>
        </nav>
    </div>
    <div id="div-main">
        <div id="div-left">
            @Html.Partial("_PartialCategory")
        </div>
        <div id="div-containt">
            @RenderBody()
        </div>
    </div>
    <div id="div-footer">Footer</div>
</body>
</html>
